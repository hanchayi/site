div.navbar-fixed-container
  nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse(role="navigation")
    div.container
      // mobile
      div.navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-collapse", aira-expanded="false")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/")
          div.logo

      // pc
      div#navbar-collapse.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          each menu in website.menus
            if(path.indexOf(menu.path) >= 0)
              li.active(role="presentation")
                a(href=menu.path) #{menu.label}
            else
              li(role="presentation")
                a(href=menu.path) #{menu.label}