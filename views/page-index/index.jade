  div.container-wrapper
    div.container
      div.row
        each item in news
          div.col-sm-6.col-md-4
            div.thumbnail
              img(src="" alt="")
              div.caption 
                h3=item.title
                p=item.desc
                p  
                  a.btn.btn-success.btn-lg(href="#", role="button") leran more

  
  div.container-wrapper
    div.container
      div.row
        div.col-sm-12
          div#stuffs.carousel.slide(data-ride="carousel", data-interval="false")
            div.carousel-inner(role="listbox")
              each index in [1, 2, 3]
                  div.item(class=index === 1 ? 'active' : '')
                    div.container-fluid
                      div.row
                        each index in [1, 2, 3] 
                          div.col-md-4
                            a.profile-image
                            div.text-content
                              p.name Stefan Cosma @stefanbc
                              p.desc Pushed my first commit using @code in under 15s. 💯
            a.left.carousel-control(href="#stuffs", role="button", data-slide="prev")
              span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
            a.right.carousel-control(href="#stuffs", role="button", data-slide="next")
              span.glyphicon.glyphicon-chevron-right(aria-hidden="true")

